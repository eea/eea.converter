<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="2.0"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                xmlns:outline="http://wkhtmltopdf.org/outline"
                xmlns:tal="http://xml.zope.org/namespaces/tal"
                xmlns="http://www.w3.org/1999/xhtml">
  <xsl:output doctype-public="-//W3C//DTD XHTML 1.0 Strict//EN"
              doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"
              indent="yes" />
  <xsl:template match="outline:outline">
    <html>
      <head>
        <title tal:content="view/header">Contents</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <style>
          body {
            font-family: verdana;
          }
          header {
            text-align: left;
            font-size: 20pt;
            font-weight: bold;
            padding-bottom: 2em;
            border-bottom: 1pt solid #000;
            margin-bottom: 1.5em;
          }

          div.item a {
            background-color: #fff;
            padding-right: 3pt;
            clear: both;
            padding-bottom: 1pt;
          }

          span {
            float: right;
            padding: 0;
            margin: 0;
            padding-left: 3pt;
          }

          li {
            list-style: none;
          }

          a {
            text-decoration:none;
            color: black;
          }

          ul ul div.item:after {
            content: "";
            display: block;
            overflow: hidden;
            border-bottom: 2pt dotted #000;
            margin-top: -3pt;
          }

          ul div.item {
            margin-top: 1.5em;
            border-bottom: 1pt solid #000;
            padding: 5pt 0;
            margin-bottom: 1em;
          }

          ul div.item span {
            display: none;
          }

          ul ul div.item {
            margin: 0;
            padding: 0;
            border: none;
          }

          ul ul div.item span {
            display: block;
          }

          ul {
            margin: 5pt 0;
            font-weight: bold;
            padding-left: 0em;
            font-size: 14pt;
          }

          ul ul {
            padding-left: 1em;
            font-size: 12pt;
          }

          ul ul ul {
            font-weight: normal;
          }

        </style>
      </head>
      <body class="table-of-contents">
        <header tal:content="view/header">Contents</header>
        <ul><xsl:apply-templates select="outline:item/outline:item"/></ul>
      </body>
    </html>
  </xsl:template>
  <xsl:template match="outline:item">
    <li>
      <xsl:if test="@title!=''">
        <div class="item">
          <span> <xsl:value-of select="@page" /> </span>
          <a>
            <xsl:if test="@link" tal:condition="view/toc_links">
              <xsl:attribute name="href"><xsl:value-of select="@link"/></xsl:attribute>
            </xsl:if>
            <xsl:if test="@backLink" tal:condition="view/toc_links">
              <xsl:attribute name="name"><xsl:value-of select="@backLink"/></xsl:attribute>
            </xsl:if>
            <xsl:value-of select="@title" />
          </a>
        </div>
      </xsl:if>
      <ul>
        <xsl:comment>added to prevent self-closing tags in QtXmlPatterns</xsl:comment>
        <xsl:apply-templates select="outline:item"/>
      </ul>
    </li>
  </xsl:template>
</xsl:stylesheet>
