<?xml version="1.0" encoding="utf-8" ?>
<xsl:stylesheet version="2.0"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:outline="http://wkhtmltopdf.org/outline"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:tal="http://xml.zope.org/namespaces/tal">
  <xsl:output doctype-public="-//W3C//DTD XHTML 1.0 Strict//EN" doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" indent="yes" />

  <xsl:variable name="tocdepth" tal:attributes="select view/toc_depth;" />

  <xsl:template match="outline:outline">
    <html>
      <head>
        <title tal:content="view/header">Contents</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <style>
          body {
            font-family: Verdana, "Lucida Grande", Helvetica, Arial, sans-serif;
          }

          header {
            text-align: left;
            font-size: 20pt;
            font-weight: bold;
            padding-bottom: 0.2em;
            border-bottom: 1pt solid #000;
            margin-bottom: 0.5em;
            margin-top: 0;
          }

          ul {
            font-weight: bold;
            font-size: 12pt;
            padding-left: 0;
            list-style: none;
            page-break-inside: auto;
          }

          ul ul {
            font-size: 10pt;
          }

          ul ul ul {
            font-weight: normal;
          }


          ul ul li {
            margin: .5em 0 .5em 2em;
          }

          ul .item {
            margin: 1em 0;
            page-break-inside: avoid;
          }

          ul ul .item {
            margin: 0;

          }

          .item:after {
            content: "";
            display: table;
            clear: both;
          }

          .item a {
            display: block;
            margin-right: 30pt;
            color: #000;
            text-decoration: none;
            page-break-inside: avoid;
          }

          .page {
            float: right;
            display: block;
            color: black;
            text-decoration: none;
            height: 0;
            margin-top: -12pt;
          }

          .item a:after {
            content: "";
            display: block;
            border-bottom: 2pt dotted;
            margin-top: -3pt;
          }

          .title {
            background: white;
            padding-right: 5pt;
          }
        </style>

        <link tal:attributes="href string:${context/portal_url}/pdf_custom_fixes.css" rel="stylesheet" type="text/css" tal:condition="exists:context/pdf_custom_fixes.css"/>

    </head>
      <body class="table-of-contents">
          <xsl:if test="$tocdepth != 0">
              <header tal:content="view/header">Contents</header>
              <ul><xsl:apply-templates select="outline:item/outline:item"/></ul>
          </xsl:if>
      </body>
    </html>
  </xsl:template>

  <xsl:template match="outline:item">
    <li>
        <xsl:if test="@title!=''">
            <div class="item">
              <a>
                <xsl:if test="@link" tal:condition="view/toc_links">
                  <xsl:attribute name="href"><xsl:value-of select="@link"/></xsl:attribute>
                </xsl:if>
                <xsl:if test="@backLink" tal:condition="view/toc_links">
                  <xsl:attribute name="name"><xsl:value-of select="@backLink"/></xsl:attribute>
                </xsl:if>
                <span class="title"><xsl:value-of select="@title" /></span>
              </a>
              <span class="page"><xsl:value-of select="@page"/></span>
            </div>
        </xsl:if>
    <ul>
        <xsl:variable name="count" select="count(ancestor::outline:item)" />
        <xsl:if test="$count &lt; $tocdepth or $tocdepth = -1">
            <xsl:apply-templates select="outline:item"/>
        </xsl:if>
        <xsl:comment i18n:translate="">added to prevent self-closing tags in QtXmlPatterns</xsl:comment>
    </ul>

    </li>
  </xsl:template>
</xsl:stylesheet>
